<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lib_shopping_purple">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.6"
        android:src="@drawable/lib_shopping_background_3"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/section_label"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lib_shopping_onboarding_fragment_image"/>


    <TextView
        android:id="@+id/section_label"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:background="#FFF"
        android:paddingTop="20dp"
        android:layout_alignParentBottom="true"
        android:text="We can do it"
        android:layout_height="120dp"/>

</RelativeLayout>
